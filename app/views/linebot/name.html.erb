<div class="mx-5 my-4 text-center">
    <%= form_with(url: create_path,method: :post, local: true) do |f| %>
        <%= f.hidden_field :uid, :value => params[:uid]  %>
        <div>名前を入力してね！</div>
        <div>(名字と名前の間に半角スペース)</div>
        <%= f.text_field :name,class: "form-control mt-4",placeholder: "例 多賀 遼太郎" %>
        <%= f.submit '送信' ,class: "btn btn-info mt-4"%>
    <% end %>
</div>